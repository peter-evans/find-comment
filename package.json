  "dependencies": {
    "@actions/core": "1.2.6",
    "@actions/github": "4.0.0"
  },
  "devDependencies": {
    "@types/jest": "26.0.20",
    "@types/node": "14.14.31",
    "@typescript-eslint/parser": "4.15.2",
    "@vercel/ncc": "0.27.0",
    "eslint": "7.20.0",
    "eslint-plugin-github": "4.1.1",
    "eslint-plugin-jest": "24.1.5",
    "jest": "26.6.3",
    "jest-circus": "26.6.3",
    "js-yaml": "4.0.0",
    "prettier": "2.2.1",
    "ts-jest": "26.5.2",
    "typescript": "4.2.2"
  }
