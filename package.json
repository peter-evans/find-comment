    "@actions/github": "4.0.0"
  },
  "devDependencies": {
    "@types/jest": "26.0.23",
    "@types/node": "15.0.3",
    "@typescript-eslint/parser": "4.23.0",
    "@vercel/ncc": "0.28.5",
    "eslint": "7.26.0",
    "eslint-plugin-github": "4.1.3",
    "eslint-plugin-jest": "24.3.6",
    "jest": "26.6.3",
    "jest-circus": "26.6.3",
    "js-yaml": "4.1.0",
